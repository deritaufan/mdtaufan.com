<section class="admin">
    <div class="container text-center">
        <h2>Add A Post</h2>
        <div class="horizontal-line"></div>
        <br/>
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <% flash.each do |key, value| %>
                    <%= content_tag :div, value, class: "alert alert-#{key}" %>
                <% end %>
                <%= form_for @blog, url: dashboard_create_post_path do |f| %>
                    <div class="form-group">
                        <%= f.text_field :title, class: 'form-control', placeholder: 'Post Title' %>
                    </div>
                    
                    <div class="form-group">
                        <%= f.text_field :sub_title, class: 'form-control', placeholder: 'Post Subtitle' %>
                    </div>
                    
                    <div class="form-group">
                        <%= f.cktext_area :post, class: 'form-control', ckeditor: {language: 'en'}, placeholder: 'Content' %>
                    </div>
                    <%= f.button "Submit", class: "btn btn-primary btn-block" %>
                <% end %>
            </div>
        </div>
    </div>
</section>
